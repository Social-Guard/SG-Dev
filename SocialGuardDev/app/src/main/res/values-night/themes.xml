<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SocialGuardDev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (same purple as day) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color (match primary for uniformity) -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Dark mode background and surface -->
        <item name="android:colorBackground">@color/ic_launcher_background</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnBackground">@color/purple_500</item>
        <item name="colorOnSurface">@color/purple_700</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
