<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialGuardDev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (make it match purple) -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/purple_200</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/purple_700</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/purple_200</item>
    </style>
</resources>
